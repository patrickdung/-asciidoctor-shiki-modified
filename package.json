    "@types/node": "^18.11.18",
    "tsup": "^6.5.0"
  },
  "dependencies": {
    "shiki": "^0.11.1",
    "synckit": "^0.8.5"
  },
  "peerDependencies": {
    "@asciidoctor/core": "^2.2.6"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
